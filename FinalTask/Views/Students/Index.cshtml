@model IEnumerable<FinalTask.Models.Entity.Students>

@{
    ViewData["Title"] = "Студенты";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Студенты</h2>

<p>
    <a asp-action="Create">Добавить студента</a>
</p>
<table class="table table-hover table-striped table-sm table-responsive-md">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SurName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patronymic)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Year)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Passport)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Photo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.SurName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Patronymic)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Year)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Passport)
                </td>
                <td>
                    <img src="~/img/students/@item.Photo" width="100" height="100" />
                </td>
                <td>
                    <div class="pb-1"><a asp-action="Edit" asp-route-id="@item.Id">Редактировать</a> </div>
                    <div><a asp-action="Details" asp-route-id="@item.Id">Подробнее</a> </div>
                </td>
            </tr>
        }
    </tbody>
</table>
