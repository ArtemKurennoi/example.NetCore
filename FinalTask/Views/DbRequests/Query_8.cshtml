@model IEnumerable<FinalTask.ViewModel.VmQuery_8>
@{
    ViewData["Title"] = "Запросы";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Запрос 8</h2>


<div class="row">
    <div class="col-md-12 ">
        <h5 class="m-3 text-center">
            Выполняет группировку по полю Наименование дисциплины в таблице ЭКЗАМЕНЫ. Для каждой дисциплины вычисляет среднее значения по полю Оценка
        </h5>
        <table class="table table-hover table-striped table-sm table-responsive-md">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.DisciplineName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.AvgScore)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.DisciplineName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AvgScore)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>